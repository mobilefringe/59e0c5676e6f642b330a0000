<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            renderPopup();
            var banners = getBanners();
            var mobile_banners = getRepoDetailsByName("Mobile Banners");
            var feature_items = getFeatureList().splice(0, 3);
            var promotions = getPromotionsList().sortBy(function(o){ return o.start_date });
            // renderBanner('#banner_template','#home_banner',banners);
            if(mobile_banners != undefined)
                // renderMobileBanner('#mobile_banner_template', '#mobile_banner', mobile_banners.images);
            // renderFeatureItems('#feature_container','#feature_template', feature_items);
            // renderFeatureItems('#feature_container_2','#feature_template_2', feature_items);
            var published_promos = [];
            $.each( promotions , function( key, val ){
                today = moment();
                webDate = moment(val.show_on_web_date);
                if (today.tz(site_json.time_zone) >= webDate.tz(site_json.time_zone)) {
                    published_promos.push(val)
                }
            });
            console.log(published_promos.reverse().slice(0,3));
            if(published_promos.length > 0){
                renderPromotions("#promos_container","#promos_template", published_promos.reverse().slice(0,3));
            }
            // show_content();
            
            
            renderSitePopup();
        }
        function renderPopup(){
            var popup = getPopups()[0];
            if(popup != undefined){
                if($.cookie("popup_viewed") != "true"){
                    $.cookie("popup_viewed", "true", { expires: 1 });
                    $('<div class="modal-backdrop custom_backdrop"></div>').appendTo(document.body);
                    $('.custom_popup').show()
                }
                $('.close_popup, .custom_backdrop').click(function(){
                    $(".modal-backdrop").remove();
    		        $(".custom_popup").remove();
                })
                
                if(popup.contest.id != null){
                    $('.custom_img').attr('src', '//mallmaverick.cdn.speedyrails.net'+ popup.photo_url);
                    $('.custom_text').text(popup.description1);
                    $('.p_name').text(popup.name);
                } else {
                    $('.popup_form_div').css('visibility', 'hidden');
                    $('.custom_popup').css('background-image', 'url(//mallmaverick.cdn.speedyrails.net' + popup.photo_url + ')');
                }
    
                $('#form_popup').submit(function(){
                    $('#cm-name').val($('#FNAME').val() + " " + $('#LNAME').val());
                    if($('#popup_agree').is(':checked') == false){
                        alert("Please agree to receive emails.");
                        $('#popup_agree').focus();
                        return false;
                    }
                });
                $('.close_popup').click(function(){
                    $('.custom_popup').fadeOut();
                });
            }
        }
        loadMallData(renderAll); 
    });
    $(window).load(function(e){
        $('.flexslider').flexslider({
                animation: "slide",
                allowOneSlide: false,
            });
            $(".flex-direction-nav").hide();
        show_content();
    });
</script>