<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var jobs = getJobsList().sortBy(function(o){ return o.name});
            var published_jobs = [];
            $.each( jobs , function( key, val ){
                var today = moment();
                webDate = moment(val.show_on_web_date)
                if (today.tz(site_json.time_zone) >= webDate.tz(site_json.time_zone)) {
                    published_jobs.push(val)
                } 
            });
            if(published_jobs.length > 0){
                renderJobs('#jobs_container', '#jobs_template', jobs);
            }
            else{
                $('#no_jobs').show()
            }
            // show_content();
        }
        
		loadMallDataCached(renderAll); 
    });
    $(window).load(function(e){
        show_content();
    });
</script>