    <form action="//mobilefringe.createsend.com/t/d/s/bkhoy/" method="post" id="newsletter_form">
        <div class="row">
            <div class="col-md-12">
                <img src="//codecloud.cdn.speedyrails.net/sites/580f9dab6e6f643917000000/image/jpeg/1478198391000/FairfaxCorner_Newsletter.jpg" class="padding_20" />
            </div>
            <div class="col-md-8 text-center" style=" float: none; margin: 0 auto; ">
                <p class="text-left">
                    Sign up to get interesting news and updates delivered to your inbox.

                </p>
                <div class="row">
                    <div class="col-md-6 text-left">
                        <label class="text-left" for="fieldName">Name</label>
                        <input id="fieldName" name="cm-name" type="text" class="form-control">
                    </div>
                
                    <div class="col-md-6 text-left">
                        <label class="text-left" for="fieldEmail">Email</label>
                        <input id="fieldEmail" name="cm-bkhoy-bkhoy" type="email" required class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label class="newsletter_label">
                            <input id="newsletter_agree" type="checkbox" />
                             I agree to receive emails from Hazeldean Mall
                        </label>
                        <br />
                        <button type="submit" class="animated_btn main_btn">Subscribe</button>
                        <p class="hidden_now" id="success_subscribe">
                            Thank you for subscribing!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
